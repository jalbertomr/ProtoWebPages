<?php
	echo ("El valor del campo nombre es: . $nombre.<br>");
	echo ("El valor del campo ciudad es: . $ciudad.<br>");
	echo ("El valor del campo edad es: . $edad.<br>");



	echo ("El valor del campo nombre es: ". $HTTP_GET_VARS["nombre"]."<br>");
	echo ("El valor del campo ciudad es: ". $HTTP_GET_VARS["ciudad"]."<br>");
	echo ("El valor del campo edad es: ". $HTTP_GET_VARS["edad"]."<br>");
	foreach ($HTTP_GET_VARS as $cve => $valor){
	  echo ("$cve -> $valor <br>");
	}
?>
